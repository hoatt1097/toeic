
<div class="container">
  <%= form_for :session, url: operator_sign_in_path do |f| %>
    <div class="imgcontainer">
      <%= image_tag "operator/avatar.png" , class: "avatar"%>
    </div>

    <div class="row">
      <div>
        <div class="form-info col-sm-12 col-md-6 col-md-offset-3">
          <label for="uname"><b>Username</b></label>
          <%= f.text_field :nickname, placeholder: "Enter your name", required: true %>

          <label for="psw"><b>Password</b></label>
          <%= f.password_field :password, placeholder: "Enter your password", required: true %>

          <%= f.submit "Login", type: "submit" %>
        </div>
      </div>
    </div>
  <% end %>
</div>