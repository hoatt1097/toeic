<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "user/avatar.png" , class:"img-circle", alt:"User Image"%>
      </div>
      <div class="pull-left info">
        <p><%= current_user.nickname %></p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu" data-widget="tree">
      <!--      Home menu-->
      <li>
        <%= link_to user_homes_path do %>
          <i class="fa fa-th"></i>
          <span>Home</span>
        <% end %>
      </li>

      <!--      Lession menu-->
      <li class="treeview">
        <a href="#">
          <i class="fa fa-files-o"></i>
          <span>Grammar</span>
          <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <% lesson.each do |lesson| %>
            <li><a href=""><i class="fa fa-circle-o"></i> <%=lesson.name %></a></li>
          <%end %>
        </ul>
      </li>

      <!--      Vocabulary menu-->
      <li>
        <%= link_to user_vocabularies_path do %>
          <i class="fa fa-pie-chart"></i>
          <span>Vocabulary</span>
        <% end %>
      </li>

      <!--      Part5 menu-->
      <li>
        <%= link_to user_practices_path do %>
          <i class="fa fa-laptop"></i>
          <span>Practice</span>
        <% end %>
      </li>

    </ul>
  </section>
  <!-- /.sidebar -->
</aside>